<div class ="row">
  <h1><%= @museum.name %></h1>
    <div class="museum-photo">
    <% unless @museum.photo.nil? %>
    <%= image_tag @museum.photo %>
    <% end %>
</div>
</div>

<div class="row">
  <div class="small-12 large-6 columns" id="museum-information">
    <h4>Hours:</h4>
      <ul class ="no-bullet">
        <% @hours.each do |hour| %>
            <li><%= hour %></li>
        <% end %>
      </ul>
    <%= @museum.location %><br>
    <%= @museum.phone_number %><br>
    <%= link_to @museum.website, @museum.website %><br>
    Patron Rating: <%= @museum.rating %><br>
  </div>

<div class="small-12 large-6 columns" id="review-form">
  <% if user_signed_in? %>
    <%= render "reviews/review_form" %>
  <% else %>
  <h4> Please sign in or create and account to leave your review. </h4>
  <% end %>
</div>

</div>

<div class="row">

<h2>Reviews</h2>
   <% if @reviews %>
       <% @reviews.each do |review| %>
       <div class="small-8 small-centered" id="review">
         <div class="review-avatar">
           <% unless review.user.avatar.url.nil? then %>
            <%= image_tag review.user.avatar.url %>
           <% end %>
          <%= review.user.username %>'s thoughts:
        </div>
         <h4>Rating: <%= review.rating %></h4>
         <% if review.body %>
         <div class="small-12 columns">
          <p class="review-body"><%= review.body %></p>
        </div>
        <p id="score_<%= review.id %>">
          Score: <%= review.score %>
        </p>
        <button id="<%= review.id%>" class="upvote">Upvote</button>
        <button id="<%= review.id%>" class="downvote">Downvote</button>
         <% end %>


         <% if user_signed_in? && review.user == current_user%>
           <%= link_to 'Edit This Review', edit_museum_review_path(review.museum, review) %><br>
           <%= link_to 'Delete This Review', museum_review_path(review.museum, review), method: :delete %>
         <% end %>

         <% if user_signed_in? && current_user.admin %>
          <%= link_to 'Delete as Admin', admin_review_path(review), method: :delete %>
         <% end %>
       </div>
     <% end %>
   <% end %>
 </div>
